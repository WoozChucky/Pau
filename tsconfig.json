{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "rootDir": "src",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "strict": true,
        "sourceMap": true,
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
      "src/**/*"
    ],
    "ts-node": {
        // these options are overrides used only by ts-node
        "compilerOptions": {
            "module": "commonjs"
        }
    }
}
