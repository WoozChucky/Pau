{
  "name": "pau",
  "version": "0.0.1",
  "description": "App that demonstrates the basics of blockchain technology",
  "author": "Nuno Silva <nuno.levezinho@live.com.pt>",
  "homepage": "https://github.com/WoozChucky/Pau#README",
  "bugs": {
    "url": "https://github.com/WoozChucky/Pau/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WoozChucky/Pau"
  },
  "scripts": {
    "node1": "set DATA_FOLDER=data1&& node ./dist/app.js -n node1 -p 3001 -host localhost",
    "node2": "set DATA_FOLDER=data2&& node ./dist/app.js -n node2 -p 3002 -host localhost",
    "node3": "set DATA_FOLDER=data3&& node ./dist/app.js -n node3 -p 3003 -host localhost",
    "start": "ts-node ./src/app.ts -n master",
    "start:watch": "nodemon",
    "start:dev": "concurrently \"npx tsc -w\" \"nodemon\" \"nodemon -x tsoa spec\" ",
    "predev": "npm run swagger",
    "prebuild": "npm run swagger",
    "swagger": "tsoa spec",
    "build": "npx tsc",
    "build:watch": "npx tsc -w",
    "test": "node --max_old_space_size=2048 node_modules/jest/bin/jest.js --coverage --forceExit",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "@pskzcompany/winston-graylog": "^1.0.1",
    "argparse": "^2.0.1",
    "async-mutex": "^0.4.0",
    "base-x": "^4.0.0",
    "cookie-parser": "^1.4.6",
    "crypto-js": "^4.1.1",
    "csurf": "^1.11.0",
    "debug": "~4.3.4",
    "dotenv": "^16.0.3",
    "elliptic": "^6.5.4",
    "errorhandler": "^1.5.1",
    "express": "~4.18.2",
    "helmet": "^6.0.0",
    "js-sha3": "^0.8.0",
    "leveldown": "^6.1.1",
    "levelup": "^5.1.1",
    "lodash": "^4.17.21",
    "morgan": "~1.10.0",
    "multer": "^1.4.5-lts.1",
    "ripemd160": "^2.0.2",
    "swagger-ui-express": "^4.6.0",
    "tsoa": "^4.1.3",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "ws": "^8.11.0"
  },
  "devDependencies": {
    "@shopify/eslint-plugin": "^42.0.1",
    "@types/argparse": "^2.0.10",
    "@types/body-parser": "^1.19.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/crypto-js": "^4.1.1",
    "@types/csurf": "^1.11.2",
    "@types/elliptic": "^6.4.14",
    "@types/errorhandler": "1.5.0",
    "@types/jest": "^29.2.3",
    "@types/leveldown": "^4.0.3",
    "@types/levelup": "^5.1.2",
    "@types/lodash": "^4.14.190",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.9",
    "@types/ripemd160": "^2.0.0",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.44.0",
    "concurrently": "^7.6.0",
    "eslint": "^8.28.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testEnvironment": "node",
    "testMatch": [
      "**/test/**/*.spec.ts"
    ],
    "testPathIgnorePatterns": [
      "packages/*/dist"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ]
  }
}
